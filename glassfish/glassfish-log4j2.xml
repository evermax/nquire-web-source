<?xml version="1.0" encoding="UTF-8"?>
<configuration status="warn" packages="org.apache.logging.log4j.core,net.kencochrane.raven.log4j2">
    <appenders>
        <Raven name="Sentry">
            <dsn>
                http://${env:SENTRY_INITIAL_KEY}@sentry:9000/1
            </dsn>
            <tags>
                glassfish:4
            </tags>
        </Raven>
    </appenders>

    <loggers>
        <root level="info">
            <appender-ref ref="Sentry"/>
        </root>
        <logger name="org.hibernate" level="info">
            <appender-ref ref="Sentry"/>
        </logger>
        <logger name="org.hibernate.tool.hbm2ddl" level="info">
            <appender-ref ref="Sentry"/>
        </logger>
    </loggers>
</configuration>
